<style type="text/css">
	textarea {
		height: 140px;
		width: 95%;
		padding-right: 10px;
	}

	select {
		width: 70px;
	}

	.row.form-actions {
		margin-left: 1px;
	}
</style>

<form class="">
	<%= simple_fields_for :crypto do |f| %>
		<div class="row">
			<div class="span3 form-horizontal">
				<%= f.input :p, :collection => @primes %>
			</div>

			<div class="span3 form-horizontal">
				<%= f.input :q, :collection => @primes %>
			</div>

			<div class="span3 form-horizontal">
				<%= f.input :e, :collection => [] %>
			</div>

			<div class="span3 form-horizontal">
				<div class="control-group select required crypto_d">
			  	<label class="select required control-label" for="crypto_d">
					<abbr title="required">*</abbr> D</label>
					<div class="controls">
						<label id="crypto_d" name="crypto[d]"></label>
					</div>
				</div>
			</div>
		</div>	  				  
		<hr>
		
		<div class="row">
		  <div class="span4"><%= f.input :input, as: :text %></div>		  
		  <div class="span4"><%= f.input :encrypted, as: :text %></div>
		  <div class="span4"><%= f.input :decrypted, as: :text %></div>		  
		</div>
		
		<div class="row form-actions">
			<div class="span4">
				<a id="encrypt" class="btn span2 btn-primary" type="submit">Encrypt    <i class="icon-arrow-right"></i></a>
			</div>
			<div class="span4">
				<a id="decrypt" class="btn span2 btn-primary" type="submit">Decrypt    <i class="icon-arrow-right"></i></a>
			</div>
			<div class="span4">
			</div>
		</div>
		
	<% end %>
</form>